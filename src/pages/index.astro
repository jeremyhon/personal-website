---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { getEntry, render } from 'astro:content';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const entry = await getEntry('home', 'index');

if (!entry) {
	throw new Error('Home content not found: src/content/home/index.mdx');
}

const { Content } = await render(entry);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="page">
			<Content />
		</main>
		<Footer />
	</body>
</html>

<style>
	.page {
		display: flex;
		flex-direction: column;
		gap: 5rem;
	}
	.hero {
		padding-top: 2rem;
		display: grid;
		gap: 1.5rem;
	}
	.eyebrow {
		font-size: 1rem;
		text-transform: uppercase;
		letter-spacing: 0.15em;
		color: rgb(var(--gray));
		margin: 0;
	}
	.lead {
		font-size: 1.2rem;
		max-width: 38rem;
	}
	.hero-actions {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}
	.hero-note {
		color: rgb(var(--gray));
		font-size: 0.95rem;
		margin: 0;
	}
	.section {
		display: grid;
		gap: 2rem;
	}
	:global(.section-header p) {
		margin: 0.5rem 0 0;
		color: rgb(var(--gray));
	}
	:global(.section-header) {
		padding-top: 1rem;
		padding-bottom: 1rem;
	}
	:global(.card) {
		background: transparent;
		border: none;
		border-radius: 0;
		box-shadow: none;
		padding: 0;
	}
	:global(.facts) {
		margin: 1rem 0 0;
		padding-left: 1.2rem;
	}
	:global(.timeline) {
		display: grid;
		gap: 1.5rem;
	}
	:global(.timeline-item) {
		background: rgba(var(--gray-light), 60%);
		border-radius: 16px;
		padding: 1.5rem;
		display: grid;
		gap: 0.75rem;
	}
	:global(.stack) {
		display: grid;
		gap: 1.5rem;
	}
	:global(.staffany-contents) {
		margin-top: 1rem;
	}
	:global(.contact-card) {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 2rem;
		flex-wrap: wrap;
	}
	.button {
		padding: 0.7rem 1.4rem;
		border-radius: 999px;
		border: 1px solid rgba(var(--gray), 40%);
		text-decoration: none;
		color: rgb(var(--gray-dark));
	}
	.button.primary {
		background: var(--accent);
		color: #fff;
		border-color: var(--accent);
	}
	:global(.muted) {
		color: rgb(var(--gray));
	}
	:global(.reflection) {
		margin-top: 1rem;
		padding-top: 0.75rem;
		border-top: 1px dashed rgba(var(--gray), 35%);
		font-size: 0.95rem;
		color: rgb(var(--gray));
	}
	:global(.two-column) {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
		gap: 0.5rem 1.5rem;
	}
	@media (max-width: 720px) {
		.hero {
			padding-top: 0;
		}
	}
</style>
